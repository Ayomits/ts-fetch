{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "format:check": {
      "dependsOn": ["^format:check"]
    },
    "lint:check": {
      "dependsOn": ["^lint:check"]
    },
    "format:fix": {
      "dependsOn": ["^format:fix"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "publish": {
      "dependsOn": ["^build", "^publish"],
      "env": ["NPM_TOKEN"]
    },
    "dev": {
      "dependsOn": ["^dev"]
    }
  }
}
